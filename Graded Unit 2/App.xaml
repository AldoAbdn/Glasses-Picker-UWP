<Application
    x:Class="Graded_Unit_2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Graded_Unit_2"
   >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="ResourceDictionaries/Light.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="ResourceDictionaries/Dark.xaml"/> 
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/MainDict.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/CustomControlsDict.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
